<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= tipo.nombre %> - Detalles del Tipo</title>
  <!-- Incluir Bootstrap desde CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ZvpUoO/+PpID+8Jf4Qb1VwzPgPo29O70NmV8jtF5zdgczT6xZBShAzA7IM2tsV5R" crossorigin="anonymous">
</head>
<body>
  <div class="container my-5">
    <header class="text-center mb-4">
      <h1 class="display-4">Detalles del Tipo <%= tipo.nombre %></h1>
    </header>

    <main>
      <!-- Sección de relaciones de daño -->
      <section class="mb-4">
        <h2 class="h3 mb-3">Relaciones de Daño</h2>
        <div class="row">
          <!-- Daño doble a otros tipos -->
          <div class="col-md-4 mb-3">
            <h4>Hace Doble Daño A:</h4>
            <ul class="list-group">
              <% tipo.relaciones.doble_dano_a.forEach(tipo => { %>
                <li class="list-group-item"><%= tipo %></li>
              <% }) %>
            </ul>
          </div>

          <!-- Daño reducido de otros tipos -->
          <div class="col-md-4 mb-3">
            <h4>Recibe Medio Daño De:</h4>
            <ul class="list-group">
              <% tipo.relaciones.medio_dano_de.forEach(tipo => { %>
                <li class="list-group-item"><%= tipo %></li>
              <% }) %>
            </ul>
          </div>

          <!-- Daño sin efecto de otros tipos -->
          <div class="col-md-4 mb-3">
            <h4>Sin Efecto A:</h4>
            <ul class="list-group">
              <% tipo.relaciones.sin_efecto_a.forEach(tipo => { %>
                <li class="list-group-item"><%= tipo %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      </section>

      <!-- Sección de Pokémon asociados con este tipo -->
      <section class="mb-4">
        <h2 class="h3 mb-3">Pokémon de Tipo <%= tipo.nombre %></h2>
        <% if (tipo.pokemon.length > 0) { %>
          <ul class="list-group">
            <% tipo.pokemon.forEach(poke => { %>
              <li class="list-group-item"><%= poke %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <div class="alert alert-info">No hay Pokémon disponibles para este tipo.</div>
        <% } %>
      </section>
    </main>

    <footer class="text-center mt-5">
      <p>Información obtenida de <a href="https://pokeapi.co/" target="_blank" class="btn btn-link">PokéAPI</a>.</p>
    </footer>
  </div>

  <!-- Incluir el script de Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0RZGqZWhX84n7lGnYv5tb3bO2RmaWj8V5sx7xyR1km6qKmf" crossorigin="anonymous"></script>
</body>
</html>
